<% @page_title = "Section" %>

<%= link_to('<< Back to List', {:action => 'index'}, :class => 'back-link') %>

<div class="sections show">
	<h2>Show Sections</h2>

	<table summary="Subject detail view">
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>	
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>	
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= status_tag(@section.visible) %></td>	
		</tr>
		<tr>
			<th>Content Type</th>
			<td><%= @section.content_type %></td>	
		</tr>
		<tr>
			<th>Content</th>
			<td><%= @section.content %></td>	
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></td>	
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.updated_at %></td>	
		</tr>
	</table>
</div>