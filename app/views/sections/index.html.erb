<% @page_title = "Sections" %>

<%= link_to("<< Back to Pages", {:controller => 'pages', :action => 'index', :subject_id => @page.subject_id}, :class => 'back-link') %>


<div class="sections index">
  <h2>Sections</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Section", {:action => 'new', :page_id => @page.id}, :class => 'action new') %>

  <div><%= pluralize(@sections.size, 'Section') %> found</div>

  <table class="listing" summary="Section list">
  	<tr class="header">
      <th>&nbsp;</th>
  		<th>Page</th>
  		<th>Name</th>
  		<th>Visible</th>
  		<th>Content Type</th>
  		<th>Content</th>
  		<th>Pages</th>
  		<th>Actions</th>
  	</tr>
  	<% @sections.each do |section| %>
  		<tr class="<%= cycle('odd', 'even') %>">
        <td><%= section.position %></td>
  			<td><%= section.page.name if section.page %></td>
  			<td><%= section.name %></td>
  			<td><%= status_tag(section.visible) %></td>
  			<td><%= section.content_type %></td>
  			<td class="center"><%= section.content %></td>
  			<td class="center"><%= section.section_edits.size %></td>
  			<td class="actions">
  				<%= link_to("Show",   subject_page_section_path(@subject.id, @page.id, section.id), :class => 'action show') %>
  				<%= link_to('Edit',   {:action => 'edit',  :id => section.id, :page_id => @page.id}, :class => 'action edit') %>
  				<%= link_to('Delete', {:action => 'delete',:id => section.id, :page_id => @page.id}, :class => 'action delete') %>
  			</td>
  		</tr>
  	<% end %>
  </table>
</div>