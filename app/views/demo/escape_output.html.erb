<% bad_script = "<script>alert('Gottach! ');</script>".html_safe %>
<% good_script = '<strong>Sample script</strong>'.html_safe %>

<%# raw(bad_script) %><br />
<%# raw(good_script) %><br />

<%= bad_script.html_safe? %><br />
<%= good_script.html_safe? %><br />

<%# h(bad_script) %><br />
<%# h(good_script) %><br />

<hr />

<% string = '<strong>Please</strong> visit <a href="http://www.google.com">us</a>.' %>
<%= strip_links(string) %><br />
<%= strip_tags(string) %><br />

<%= sanitize(bad_script) %><br />
<%= sanitize(string, :tags => []) %><br />
<%= sanitize(string, :tags => ['p', 'strong', 'em']) %><br />

