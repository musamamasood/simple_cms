<% @page_title = "Edit Page" %>

<%= link_to("<< Back to List", {:action => 'index', :subject_id => @subject.id}, :class => 'back-link') %>

<div class="subjects edit">
  <h2>Update Page</h2>

  <%= form_for(:page, :url => subject_page_path(@subject.id, @page.id), :html => {:method => 'patch'}) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
    	<%= submit_tag("Update Page") %>
    </div>

  <% end %>
</div>